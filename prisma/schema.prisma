generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model BillItem {
  id      Int      @id @default(autoincrement())
  name    String   @db.VarChar(255)
  type    String   @db.VarChar(255)
  price   Int      @db.Integer
  expiry  DateTime @db.Timestamp
  billId  Int
  Billing Billing  @relation(fields: [billId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Billing {
  id        Int        @id @default(autoincrement())
  date      DateTime
  billItems BillItem[]
  userId    String
  User      User       @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model Items {
  id     Int     @id @default(autoincrement())
  name   String  @db.VarChar(255)
  type   String?
  price  Int?    @default(0)
  userId String
  User   User    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model User {
  id       String    @id
  name     String?   @db.VarChar(255)
  Item     Items[]
  Billings Billing[]
}
