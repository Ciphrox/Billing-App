generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model BillItem {
  id       Int      @id @default(autoincrement())
  batchId  String
  name     String
  type     String
  price    Int
  quantity Int
  expiry   DateTime
  amount   Int
  Billing  Billing  @relation(fields: [billId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  billId   Int
}

model Billing {
  id           Int        @id @default(autoincrement())
  BillItem     BillItem[]
  DayBilling   DayBilling @relation(fields: [DayBillingId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  DayBillingId Int
}

model DayBilling {
  id      Int       @id @default(autoincrement())
  date    DateTime  @unique
  Billing Billing[]
  User    User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userId  String

  @@unique([date, userId])
}

model Items {
  id     Int    @id @default(autoincrement())
  name   String
  type   String
  price  Int
  User   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  userId String

  @@unique([name, userId])
}

model User {
  id          String       @id
  name        String       @default("Unnamed User")
  Item        Items[]
  DayBillings DayBilling[]
}
